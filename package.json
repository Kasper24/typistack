{
  "name": "root",
  "version": "0.1.1",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "lint:types": "npm run lint:types --workspaces",
    "lint:check": "npm run lint:check --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "publish": "npm run build && npm publish --workspaces",
    "publish:dry": "npm run build && npm publish --dry-run --workspaces",
    "version": "npm version --workspaces"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-only-warn": "^1.1.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "bunchee": "^6.5.1"
  }
}
